{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es2019",
    "typeRoots": ["./custom_typings", "./node_modules/@types"],
    "esModuleInterop": true,
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "coverage",
    "**/test/**",
    "**/**.js",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
